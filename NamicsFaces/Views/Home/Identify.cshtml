@{
    ViewBag.Title = "Faces. Namics.";
}

<div class="row">
    <div class="col-sm-7">
        <h2>Identify a Face</h2>
        <p>You can attempt to identify a member of the development team on a picture of your choice.</p>
        <form method="post">
            <div class="form-group">
                <label for="url">Image URL</label>
                <input type="text" class="form-control" name="pictureUrl" id="url" aria-describedby="urlHelp" placeholder="http://...">
                <small id="urlHelp" class="form-text text-muted">Please note that this image will be transmitted to Microsoft for analysis.</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-sm-5">
        @if (!String.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="faceimage"/>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Name</th>
	                    <td>@Model.Name</td>
	                    <th>Confidence</th>
	                    <td>@Model.Confidence</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>