@{
    ViewBag.Title = "Faces. Namics.";
}

<div class="row">
    <div class="col-sm-7">
        <h2>Analyze a Face</h2>
        <p>To find and analyze a face on an image of your choice, please paste the image URL below and submit.</p>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="url">Image URL</label>
                <input type="text" class="form-control" name="pictureUrl" id="url" aria-describedby="urlHelp" placeholder="http://...">
                <small id="urlHelp" class="form-text text-muted">Please note that this image will be transmitted to Microsoft for analysis.</small>
                <label for="file">Upload Face Image:</label>
                <input type="file" name="file" id="file" style="width: 100%;" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-sm-5">
        @if (!String.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="faceimage"/>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Estimated Age</th>
                        <td>~ @Model.Age years</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td>@Model.Gender</td>
                    </tr>
                    <tr>
                        <th>Smiling</th>
                        <td>@Model.SmilePercent</td>
                    </tr>
                    <tr>
                        <th>Glasses</th>
                        <td>@Model.Glasses</td>
                    </tr>
                    <tr>
                        <th>Facial Hair</th>
                        <td>@Model.FacialHairFormatted</td>
                    </tr>
                    <tr>
                        <th>Primary Emotion</th>
                        <td>@Model.Emotion</td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>